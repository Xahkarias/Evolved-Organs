<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>Make_EvolvedChunk</defName>
		<label>make evolved meat</label>
		<description>Make some evolved meat.</description>
		<jobString>Making evolved meat.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>5000</workAmount>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<recipeUsers>
			<li>EvolvedWorkbench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>EVO_Humanoid_Protein</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineIndustrial</li>
				<li>ComponentIndustrial</li>
				<li>EVO_Humanoid_Protein</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<EvolvedChunk>5</EvolvedChunk>
		</products>
		<researchPrerequisite>EvolvedOrgansR1</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
	<RecipeDef>
		<defName>Make_Humanoid_Protein</defName>
		<label>refine humanoid proteins</label>
		<description>Refine proteins from Humanoid Meat.</description>
		<jobString>Refining humanoid protein.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		    <allowMixingIngredients>true</allowMixingIngredients>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
		<workAmount>250</workAmount>
		<recipeUsers>
			<li>EvolvedWorkbench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Meat_Human</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<EVO_Humanoid_Protein>5</EVO_Humanoid_Protein>
		</products>
		<researchPrerequisite>EvolvedOrgansR1</researchPrerequisite>
		<skillRequirements>
			<Crafting>5</Crafting>
			<Cooking>5</Cooking>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

</Defs>
