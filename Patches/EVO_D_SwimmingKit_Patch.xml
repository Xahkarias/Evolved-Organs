<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>[1.0] SwimmingKit</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName = "EVORG_Hediff_ArmTentacle_Primary"]/stages/li[1]/statOffsets</xpath>
          <value>
            <SwimSpeed>1.5</SwimSpeed>
          </value>
          <success>Always</success>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName = "EVORG_Hediff_ArmTentacle_Secondary"]/stages/li[1]/statOffsets</xpath>
          <value>
            <SwimSpeed>1.5</SwimSpeed>
          </value>
          <success>Always</success>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName = "EvolvedPinions"]/stages/li[1]/statOffsets</xpath>
          <value>
            <SwimSpeed>1.5</SwimSpeed>
          </value>
          <success>Always</success>
        </li>
        <li Class="PatchOperationFindMod">
          <mods>
            <li>Rah's Bionics and Surgery Expansion</li>
          </mods>
          <match Class="PatchOperationSequence">
            <operations>
              <li Class="PatchOperationAdd">
                <xpath>/Defs/HediffDef[defName = "EVORG_Hediff_ArmTentacle_Primary"]/stages/li[3]/statOffsets</xpath>
                <value>
                  <SwimSpeed>3.5</SwimSpeed>
                </value>
                <success>Always</success>
              </li>
              <li Class="PatchOperationAdd">
                <xpath>/Defs/HediffDef[defName = "EVORG_Hediff_ArmTentacle_Secondary"]/stages/li[3]/statOffsets</xpath>
                <value>
                  <SwimSpeed>3.5</SwimSpeed>
                </value>
                <success>Always</success>
              </li>
              <li Class="PatchOperationAdd">
                <xpath>/Defs/HediffDef[defName = "EvolvedPinions"]/stages/li[3]/statOffsets</xpath>
                <value>
                  <SwimSpeed>5.5</SwimSpeed>
                </value>
                <success>Always</success>
              </li>
            </operations>
          </match>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>




