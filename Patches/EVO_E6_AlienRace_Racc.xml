<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Racc Race</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Make_Humanoid_Protein"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>Meat_Alien_Racc</li>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/BodyDef[defName="Racc"]/corePart/parts</xpath>
          <value>

            <li>
              <def>LowerShoulder</def>
              <customLabel>right lower shoulder</customLabel>
              <coverage>0.00</coverage>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>LowerShoulder</def>
              <customLabel>left lower shoulder</customLabel>
              <coverage>0.00</coverage>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>RightAbdomenCavity</def>
              <customLabel>right abdominal cavity</customLabel>
              <coverage>0.020</coverage>
              <depth>Inside</depth>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>RightChestCavity</def>
              <customLabel>right chest cavity</customLabel>
              <coverage>0.010</coverage>
              <depth>Inside</depth>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>LeftChestCavity</def>
              <customLabel>left chest cavity</customLabel>
              <coverage>0.010</coverage>
              <depth>Inside</depth>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>Back</def>
              <coverage>0.020</coverage>
              <depth>Inside</depth>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
            <li>
              <def>LeftAbdominalCavity</def>
              <customLabel>left abdominal cavity</customLabel>
              <coverage>0.020</coverage>
              <depth>Inside</depth>
              <groups>
                <li>Torso</li>
              </groups>
            </li>
          </value>
        </li>

        <!--Since Racc race has a "Tail" def that matches our own, no need for adding a special surgery-->
      </operations>
    </match>
  </Operation>

</Patch>

